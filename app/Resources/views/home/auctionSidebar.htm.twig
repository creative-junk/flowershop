<script type="text/javascript">
    $(document).ready(function() {
        $('#resetForm').on('click', function () {
            $('#form_filter').find('input:text, input:password, select, textarea,input:radio').val('');
        });
    });
</script>
<div class="sidebar sidebar-main">

    <div id="layered-filter-block" class="block filter" data-collapsible="true">
        <div class="block-title filter-title" data-count="0" role="tablist">
            <strong aria-expanded="false" aria-selected="false" data-role="title" role="tab" tabindex="0">
                Shop By</strong></div>
        <div class="block-content filter-content">
            <div class="block-content">
                {{ form_start(form, {'action': path('filter-auction'),'attr': {'id': 'form_filter'}}) }}
                <fieldset class="fieldset filter">

                    <div class="field">

                        {{ form_row(form.season) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.primaryColor) }}

                    </div>

                    <div class="field">
                        {{ form_row(form.vaselifeFrom) }}
                        {{ form_row(form.vaselifeTo) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.headsizeFrom ) }}
                        {{ form_row(form.headsizeTo ) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.stemLengthFrom ) }}
                        {{ form_row(form.stemLengthTo ) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.numberOfHeadsFrom ) }}
                        {{ form_row(form.numberOfHeadsTo ) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.isScented ) }}
                    </div>

                    <div class="field">
                        {{ form_row(form.min) }}
                        {{ form_row(form.max) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.isOnSale ) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.country) }}

                    </div>
                    <div class="field">
                        <input class="action primary" id="resetForm" type="button" value="Reset">
                        </input>
                        <button class="action primary" type="submit">Filter
                        </button>
                    </div>
                </fieldset>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>