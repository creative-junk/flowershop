<script type="text/javascript">
    $(document).ready(function() {
        $('#resetForm').on('click', function () {
            $('#form_filter').find('input:text, input:password, select, textarea').val('');
        });
    });
</script>
<div class="sidebar sidebar-main">

    <div id="layered-filter-block" class="block filter" data-collapsible="true">
        <div class="block-title filter-title" data-count="0" role="tablist">
            <strong aria-expanded="false" aria-selected="false" data-role="title" role="tab" tabindex="0">
                Shop By</strong></div>
        <div class="block-content filter-content">
            <div class="block-content">
                {{ form_start(form, {'action': path('filter-auction'),'attr': {'id': 'form_filter'}}) }}
                <fieldset class="fieldset filter">
                    <div class="field">
                        {{ form_row(form.season) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.color) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.country) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.price) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.vaselife) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.stemLength ) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.headsize ) }}
                    </div>
                    <div class="field">
                        <input class="action primary" id="resetForm" type="button" value="Reset">
                        </input>
                        <button class="action primary" type="submit">Filter
                        </button>
                    </div>
                </fieldset>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>