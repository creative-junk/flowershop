{% extends 'base.html.twig' %}
{% block title %} My Orders {% endblock %}
{% block pageclass %}
<body data-container="body"
      class="page-with-filter page-products categorypath-short-sleeve category-short-sleeve catalog-category-view page-layout-2columns-left">
{% endblock %}
{% block body %}
<div class="category-view">
    <div class="page-title-wrapper">
        <h1 class="page-title" id="page-title-heading" aria-labelledby="page-title-heading toolbar-amount">
            <span class="base" data-ui-id="page-title-wrapper">My Orders</span></h1>
    </div>
    <div class="breadcrumbs">
        <ul class="items">
            <li class="item home">
                <a href="{{ path('home') }}" title="Go to Home Page">
                    Home </a>
            </li>
            <li class="item category131">
                <strong>My Orders</strong>
            </li>
        </ul>
    </div>
</div>
<main id="maincontent" class="page-main"><a id="contentarea" tabindex="-1"></a>

    <div class="page-title-wrapper">

    </div>
    <div class="page messages">
        <div data-placeholder="messages"></div>
        <div data-bind="scope: 'messages'">
            <div data-bind="foreach: { data: cookieMessages, as: 'message' }" class="messages"></div>
            <div data-bind="foreach: { data: messages().messages, as: 'message' }" class="messages"></div>
        </div>

    </div>
    <div class="columns">
        <div class="column main">

        <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>My Orders
                    <small></small>
                </h2>
                <ul class="nav navbar-right panel_toolbox">


                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p class="text-muted font-13 m-b-30">
                </p>
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th>Order Amount</th>
                        <th>Order Status</th>
                        <th>Order State</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for order in orders %}
                        <tr>
                            <td><a style="color: #e93838" href="{{ path('order-details',{
                                    'id': order.id
                                }) }}">{{ order.prettyId }}</a> </td>
                            <td><a style="color: #e93838" href="{{ path('order-details',{
                                    'id': order.id
                                }) }}">{{ order.createdAt | date('d-m-Y H:i:s') }}</a> </td>
                            <td>{{ app.user.myCompany.currency }}&nbsp;{{ order.orderTotal | convertCurrency(order.orderCurrency,app.user.myCompany.currency) }}</td>
                            <td>{{ order.orderStatus }}</td>
                            <td>{{ order.orderState }}</td>

                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" style="text-align: center">No Orders found</td>
                        </tr>
                    {% endfor %}
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

        </div>
        {% include(':home:sidebar.htm.twig') %}

    </div>
</main>
{% endblock %}