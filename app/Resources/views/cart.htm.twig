{% extends 'base.html.twig' %}
{% block title %} Shopping Cart{% endblock %}

{% block body %}
    <div class="category-view">
        <div class="page-title-wrapper">
            <h1 class="page-title" id="page-title-heading" aria-labelledby="page-title-heading toolbar-amount">
                <span class="base" data-ui-id="page-title-wrapper">Buyers</span></h1>
        </div>
        <div class="breadcrumbs">
            <ul class="items">
                <li class="item home">
                    <a href="{{ path('grower_dashboard') }}" title="Go to Home Page">
                        Home </a>
                </li>
                <li class="item category131">
                    <strong>Cart</strong>
                </li>
            </ul>
        </div>
    </div>
    <section class="section-shopping-cart-page">
        <div class="container">
            <div class="col-md-12 col-lg-9">

                <div class="items-holder">
                    {{ include(':partials:cart-items.htm.twig') }}
                </div>
            </div>
            <div id="cart-totals">
                {{ include(':partials:cart-totals.htm.twig') }}
            </div>
        </div>
    </section>
{% endblock %}

