{% extends 'badmin.htm.twig' %}
{% block title %}New Shipping Rate{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-title">
                    <h3><i class="fa fa-bars"></i> New Shipping Rate</h3>
                    <div class="box-tool">
                        <a href="#" data-action="collapse"><i class="fa fa-chevron-up"></i></a>

                    </div>
                </div>
                <div class="box-content">

                    {{ form_start(rateForm) }}
                    {{ form_row(rateForm.airline,{'attr':{'class':'select'}}) }}
                    {{ form_row(rateForm.airport,{'attr':{'class':'select'}}) }}
                    {{ form_row(rateForm.minimumCharge) }}
                    {{ form_row(rateForm.baseRate) }}
                    {{ form_row(rateForm.firstIncrement) }}
                    {{ form_row(rateForm.secondIncrement) }}
                    {{ form_row(rateForm.thirdIncrement) }}
                    {{ form_row(rateForm.fourthIncrement) }}
                    {{ form_row(rateForm.fifthIncrement) }}
                    {{ form_row(rateForm.sixthIncrement) }}

                    <div class="clearfix"></div>

                    <div class="form-group">
                        <div class="col-sm-12 col-md-12 controls">
                            <button class="btn btn-primary" type="submit"><i class="fa fa-check"></i> Save Rates</button>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                    {{ form_end(rateForm) }}
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        jQuery(document).ready(function(){
            jQuery('#parent').change(function(){
                var val = jQuery(this).val();
                if(val==0)
                {
                    jQuery('.icon-class-holder').show();
                }
                else
                {
                    jQuery('.icon-class-holder').hide();
                }

            }).change();
        });
    </script>
{% endblock %}