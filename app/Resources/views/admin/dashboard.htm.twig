{% extends 'adminBase.htm.twig' %}
{% block title %}Dashboard{% endblock %}
{% block body %}
    <div id="content" class="app-content box-shadow-z0" role="main">

        <div class="app-footer">
            <div class="p-a text-xs">
                <div class="pull-right text-muted">
                    &copy;2017 Copyright <strong>Iflora Market Administration</strong> <span class="hidden-xs-down">-  v1.1.3</span>
                    <a ui-scroll-to="content"><i class="fa fa-long-arrow-up p-x-sm"></i></a>
                </div>

            </div>
        </div>
        <div ui-view class="app-body" id="view">

            <!-- ############ PAGE START-->
            {{ include(':admin/partials:top.htm.twig') }}
            <div class="padding">
                <div class="row">
                    <div class="col-xs-12 col-sm-4">
                        <div class="box p-a">
                            <div class="pull-left m-r">
	            <span class="w-48 rounded  accent">
	              <i class="material-icons">assignment_ind</i>
	            </span>
                            </div>
                            <div class="clear">
                                <h4 class="m-a-0 text-lg _300"><a href="{{ path('approved-company-accounts') }}">{{ nrUsers }} <span
                                                class="text-sm">Companies</span></a></h4>
                                <small class="text-muted">{{ percentChangeUsers }} new.</small>
                            </div>
                        </div>
                    </div>
                </div>

                {% if is_granted('ROLE_ADMINISTRATOR') %}
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <div class="box">
                            <div class="box-header">
                                <h3>Companies</h3>
                            </div>
                            <div class="box-body">
                              <ul class="list no-border p-b">
                                {% for user in users | slice(0,5) %}
                                <li class="list-item">
                                    <a href="#" class="list-left">
	                	<span class="w-48 rounded  accent">
	              <i class="material-icons">assignment_ind</i>
	            </span>
                                    </a>
                                    <div class="list-body">
                                        <div><a href>{{ user.fullName }}</a></div>

                                    </div>
                                </li>
                                {% endfor %}
                            </ul>
                            </div>
                            <div class="box-footer">
                                <a href="{{ path('approved-company-accounts') }}" class="btn btn-sm warn text-u-c pull-right">View More</a>

                            </div>
                        </div>


                    </div>
                </div>
        {% endif %}
            </div>

            <!-- ############ PAGE END-->

        </div>
    </div>

{% endblock %}