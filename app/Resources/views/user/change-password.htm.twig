{% extends 'base.html.twig' %}
{% block title %} Login / Register {% endblock %}
{% block body %}

    <main id="maincontent" class="page-main"><a id="contentarea" tabindex="-1"></a>

        <div class="page-title-wrapper">
            <h1 class="page-title">
                <span class="base" data-ui-id="page-title-wrapper">Change Password</span></h1>
        </div>
        <div class="page messages">

        </div>
        <div class="columns">
            <div class="column main">
                <div class="login-container">
                    <div class="block block-customer-login">
                        <div class="block-title">
                            <strong id="block-customer-login-heading" role="heading" aria-level="2">Registered
                                Customers - Change Password</strong>
                        </div>
                        <div class="block-content" aria-labelledby="block-customer-login-heading">
                            {{ form_start(form) }}
                            <fieldset class="fieldset login" data-hasrequired="* Required Fields">
                                <div class="field note">Enter your New Password Below.</div>

                                <div class="field password required">
                                    {{ form_row(form.plainPassword.first,{
                                        'label': 'Password'
                                    }) }}
                                </div>
                                <div class="field confirmation required">
                                    {{ form_row(form.plainPassword.second, {
                                        'label': 'Confirm Password'
                                    }) }}
                                </div>
                                <input type="hidden" name="_target_path" value="home"/>
                                <input type="hidden" name="_failure_path" value="user_login"/>

                                <div class="actions-toolbar">
                                    <div class="primary">
                                        <button type="submit" class="action login primary" formnovalidate>
                                            <span>Update Password</span></button>
                                    </div>

                                </div>
                            </fieldset>
                            {{ form_end(form) }}
                        </div>
                    </div>
                    <div class="block block-new-customer">
                        <div class="block-title">
                            <strong id="block-new-customer-heading" role="heading" aria-level="2">New Customers</strong>
                        </div>
                        <div class="block-content" aria-labelledby="block-new-customer-heading">
                            <p>Use this form to create a new Password.</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


{% endblock %}