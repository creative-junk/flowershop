{% extends 'base.html.twig' %}
{% block title %} Notifications {% endblock %}
{% block pageclass %}
<body data-container="body"
      class="page-with-filter page-products categorypath-short-sleeve category-short-sleeve catalog-category-view page-layout-2columns-left">
{% endblock %}

{% block body %}
<div class="category-view">
    <div class="page-title-wrapper">
        <h1 class="page-title" id="page-title-heading" aria-labelledby="page-title-heading toolbar-amount">
            <span class="base" data-ui-id="page-title-wrapper">Notifications</span></h1>
    </div>
    <div class="breadcrumbs">
        <ul class="items">
            <li class="item home">
                <a href="{{ path('agent_dashboard') }}" title="Go to Home Page">
                    Home </a>
            </li>
            <li class="item category131">
                <strong>Messages - Notifications</strong>
            </li>
        </ul>
    </div>
</div>
<main id="maincontent" class="page-main">
    <div class="column main">

    <a id="contentarea" tabindex="-1"></a>
    <h2>Notifications</h2>
        <table id="inbox" class="table table-striped table-condensed">

            <thead>
            <tr>
                <th>Date</th>

                <th>subject</th>

            </tr>
            </thead>

            <tbody>

            {% if messages %}
                {% for message in messages %}

                    <tr>

                        <td>
                            <a class="{% if not message.isRead %}new{% endif %}"
                               href="{{ url('agent-view-notification', {'id': message.id}) }}">
                                {{ message.sentAt | date('d-m-Y m:h') }}
                            </a>
                        </td>
                        <td>
                            <a class="{% if not message.isRead %}new{% endif %}"
                               href="{{ url('agent-view-notification', {'id': message.id}) }}">
                                {{ message.subject }}
                            </a>

                        </td>



                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="6">
                        No Notifications
                    </td>
                </tr>
            {% endif %}

            </tbody>

        </table>
<br/><br/>
    </div>
    <script type="text/javascript">

        $( document ).ready(function() {

            $('#inbox').DataTable();

        });

    </script>
    {% include(':agent:message-sidebar.htm.twig') %}
</main>

{% endblock %}