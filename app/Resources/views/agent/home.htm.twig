                                        <!-- /.info-box-content -->
                                    </div>
                                    <div class="info-box bg-green">
                                        <span class="info-box-icon"><i class="fa fa-cubes"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">My Products</span>
                                            <span class="info-box-number">92,050</span>

                                            <div class="progress">
                                                <div class="progress-bar" style="width: 20%"></div>
                                            </div>
                                             <span class="progress-description">
                                                <a style="color: #fff" href="{{ path('my_grower_product_list') }}">Manage
                                                    Products</a>
                                              </span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                    <div class="info-box bg-aqua">
                                        <span class="info-box-icon"><i class="fa fa-comments"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">Direct Messages</span>
                                            <span class="info-box-number">163,921</span>

                                            <div class="progress">
                                                <div class="progress-bar" style="width: 40%"></div>
                                            </div>
                                            <span class="progress-description">
                                                 <a style="color: #fff" href="#">View Messages</a>
                                             </span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>


                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="banner-box">
                                <a href="{{ path('agent_auction_product_list') }}">
                                    <img src="{{ asset('images/auction-market.jpg') }}" alt="">
                                </a>
                            </div>
                        </div>
                    </div>
