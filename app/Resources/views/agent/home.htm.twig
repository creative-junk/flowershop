        <div class="page messages">
            <div data-placeholder="messages"></div>
            <div data-bind="scope: 'messages'">
                <div data-bind="foreach: { data: cookieMessages, as: 'message' }" class="messages"></div>
                <div data-bind="foreach: { data: messages().messages, as: 'message' }" class="messages"></div>
            </div>

        </div>
    </main>
    <div class="content-home">
        <div class="main-container">
            <div class="container-inner">
                <div class="static-info">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="info info1"><em class="zmdi zmdi-flower-alt zmdi-hc-fw"></em>

                                <div class="static_info">
                                    <h4><a href="{{ path('agent_buyer_list') }}">View Buyers</a></h4>

                                    <p>View all available Buyers.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="info info2"><em class="zmdi zmdi-flower zmdi-hc-fw"></em>

                                <div class="static_info">
                                    <h4><a href="{{ path('agent_growers_list') }}">View Growers</a></h4>

                                    <p>View all available Growers.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="info info3"><em class="zmdi zmdi-pin-account zmdi-hc-fw"></em>

