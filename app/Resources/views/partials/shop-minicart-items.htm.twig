<ul class="basket-items ">
    {% for item in cart.cartItems %}
        <li class="row">
            <div class="thumb col-xs-3">
                <img width="45" height="45" alt="" src="images/products/{{ item.product.imageUrl }}"/>
            </div>
            <div class="body col-xs-9">
                <h5>{{ item.product.title }}</h5>

                <div class="price">
                    <span>{{ item.cart.cartCurrency }}{{ item.unitPrice }}</span>
                </div>

                <a class="remove-item" href="#"
                   data-ajax-handler="shop:cart"
                   data-ajax-update="#cart-content=shop-cart-content, #mini-cart=shop-minicart"
                   data-ajax-extra-fields="delete_item='{{ item.id }}'">x</a>

            </div>
        </li>
    {% endfor %}
</ul>