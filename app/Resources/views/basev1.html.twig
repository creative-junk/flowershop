<header>
    <div class=" container">
        <section class="style-one-header top-area">
            <div class="row">
                <div class="col-sm-4 col-xs-12">
                    <div class="login-menu-holder ic-sm-user">
                        {% if is_granted('ROLE_USER') %}
                            Welcome, {{ app.user.firstName }}!
                            <a href="{{ path('security_logout') }}">Logout</a>
                        {% else %}
                            <a href="{{ path('security_login') }}">Login or Register</a>
                        {% endif %}
                    </div>
                    <div class="hotline-holder ic-sm-phone">
                        <label>hotline:</label>
                        <span>254-720-123-4567</span>
                    </div>
                </div>
                <div class="top-logo-holder col-sm-4 col-xs-12">

                    <div class="top-logo">
                        <a href="{{ path('homepage') }}"><img height="65" src="{{ asset('barcelona/images/logo.png') }}"
                                                              alt=""/></a>
                    </div>

                </div>
                {% if is_granted('ROLE_USER') %}
                    <div class="col-sm-4 col-xs-12">
                        <div class="wish-cart-holder">
                            <div class="top-cart-holder ic-sm-basket" id="mini-cart">
                                {{ render(controller('AppBundle:Cart:cart')) }}

                            </div>
                            <div class="search-holder">
                                <form>
                                    <input type="text" name="query" id="query" placeholder="Search" autocomplete="off"/>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </section>

        {{ include('partials/navigation.html.twig') }}

    </div>
</header> {# /Page Header #}
<div class="main-content">

    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {% endfor %}

    {% block body %}{% endblock %}
</div>

<section class="section-footer">
    <div class="footer-holder">
        {{ include(':partials:footermenu.html.twig') }}
    </div>

    <div class="footer-payment-icons">
        <ul class="list-inline">
            <li>
                <img alt="paypal" src="{{ asset('barcelona/images/payments-paypal.png') }} "/>
            </li>
            <li>
                <img alt="visa" src="{{ asset('barcelona/images/payments-visa.png') }} "/>
            </li>
            <li>
