{% extends 'base.html.twig' %}
{% block title %} Buyers {% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        jQuery(document).ready(function () {
            $('.js-request-user').on('click',function (e) {
                e.preventDefault();

                var $el = $(this).closest('.js-buyer-item');

                $(this).find('.fa-exchange')
                    .removeClass('fa-exchange')
                    .addClass('fa-spinner')
                    .addClass('fa-spin');
                $.ajax({
                    url: $(this).data('url'),
                    method: 'GET'
                }).done(function () {
                    $el.fadeOut("slow");
                });
            });
        })
    </script>
{% endblock %}
{% block pageclass %}
<body data-container="body"
      class="page-with-filter page-products categorypath-short-sleeve category-short-sleeve catalog-category-view page-layout-2columns-left">
{% endblock %}
{% block body %}
<div class="category-view">
    <div class="page-title-wrapper">
        <h1 class="page-title" id="page-title-heading" aria-labelledby="page-title-heading toolbar-amount">
            <span class="base" data-ui-id="page-title-wrapper">Buyers</span></h1>
    </div>
    <div class="breadcrumbs">
        <ul class="items">
            <li class="item home">
                <a href="{{ path('grower_dashboard') }}" title="Go to Home Page">
                    Home </a>
            </li>
            <li class="item category131">
                <strong>Buyers</strong>
            </li>
        </ul>
    </div>
</div>
<main id="maincontent" class="page-main"><a id="contentarea" tabindex="-1"></a>

    <div class="page-title-wrapper">

    </div>
    <div class="page messages">
        <div data-placeholder="messages"></div>
        <div data-bind="scope: 'messages'">
            <div data-bind="foreach: { data: cookieMessages, as: 'message' }" class="messages"></div>
            <div data-bind="foreach: { data: messages().messages, as: 'message' }" class="messages"></div>
        </div>

    </div>
    <div class="columns">
        <div class="column main">
            <div class="cart table-wrapper">
                <table id="shopping-cart-table" class="cart items data table">
                    <thead>
                    <tr>
                        <th></th>
                        <th class="col item" scope="col"><span>Buyer</span></th>
                        <th>Country</th>
                        <th>Rating</th>
                        <th class="col subtotal" scope="col"><span>Connect</span></th>

                    </tr>
                    </thead>
                    <tbody class="cart item">
                    {% for buyer in buyers %}
                        <tr class="item-info js-buyer-item">
                            <td>
                                {% if buyer.gallery %}
                                    {% if buyer.gallery.logo %}
                                        <img aria-hidden="false" width="100"  class="fotorama__img"
                                             src="{{ asset('images/products/') }}{{ buyer.gallery.logo.imageName }}">
                                    {% else %}
                                        <img aria-hidden="false" width="100"  class="fotorama__img"
                                             src="{{ asset('images/avatar.jpg') }}">

                                    {% endif %}
                                {% else %}
                                    <img aria-hidden="false" width="100"  class="fotorama__img"
                                         src="{{ asset('images/avatar.jpg') }}">

                                {% endif %}

                            </td>
                            <td data-th="Item" class="col item">

                    <span class="product-image-container" style="">
                    <strong class="product-item-name">

                        <span class="product-image-wrapper" style="padding-bottom: 100%;">
                          <a href="{{ path('grower_buyer_profile',{
                              'id':buyer.id
                          }) }}">{{ buyer.companyName }}</a>
   </span>
                    </strong>

                    </span>
                            </td>
                            <td>{{ buyer.country }}</td>
                            <td class="col subtotal" data-th="Subtotal">
                                {% if buyer.reviews | length > 0 %}

                                    {% set sumQualityratings = 0 %}
                                    {% set avgQualityRatings=0 %}
                                    {% for rating in buyer.reviews %}
                                        {% set sumQualityratings = sumQualityratings + rating.quality %}
                                    {% endfor %}
                                    {% set avgQualityRatings= (sumQualityratings / buyer.reviews|length) | round %}

                                    {% set sumValueratings = 0 %}
                                    {% set avgValueRatings=0 %}
                                    {% for rating in buyer.reviews %}
                                        {% set sumValueratings = sumValueratings + rating.value %}
                                    {% endfor %}
                                    {% set avgValueRatings= (sumValueratings / buyer.reviews|length) | round %}

                                    {% set sumPriceratings = 0 %}
                                    {% set avgPriceRatings=0 %}
                                    {% for rating in buyer.reviews %}
                                        {% set sumPriceratings = sumPriceratings + rating.price %}
                                    {% endfor %}
                                    {% set avgPriceRatings= (sumQualityratings / buyer.reviews|length) | round %}

                                    {% set avgrating=0 %}
                                    {% set avgrating = (avgQualityRatings+avgValueRatings+avgPriceRatings)/3 %}

                                    {{ avgrating | rating(5, "fa-lg")   }}
                                {% else %}
                                    {{ 0 | rating(5, "fa-lg")   }}
                                {% endif %}
                            </td>

                            <td class="col subtotal" data-th="Subtotal">
<span class="price-excluding-tax" data-label="Excl. Tax">
                        <span class="cart-price">
                            <a
                                    href="#"
                                    class="action request js-request-user"
                                    data-url="{{ path('request-buyer-grower',{
                                        'id': buyer.id
                                    }) }}"
                                    title="Request Agent">
                                <span class="fa fa-exchange"></span>  Request

                            </a>
                        </span>

                </span>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


            </div>
        </div>
        {% include(':grower:sidebar.htm.twig') %}

    </div>
</main>
{% endblock %}