{% extends 'base.html.twig' %}
    {% block title %}Add to Market - iFlora Auction Market{% endblock %}
{% block pageclass %}
<body data-container="body"
      class="page-with-filter page-products categorypath-short-sleeve category-short-sleeve catalog-category-view page-layout-2columns-left">
{% endblock %}
    {% block body %}
        <div class="category-view">
            <div class="page-title-wrapper">
                <h1 class="page-title" id="page-title-heading" aria-labelledby="page-title-heading toolbar-amount">
                    <span class="base" data-ui-id="page-title-wrapper">Direct Market</span></h1>
            </div>
            <div class="breadcrumbs">
                <ul class="items">
                    <li class="item home">
                        <a href="{{ path('grower_dashboard') }}" title="Go to Home Page">
                            Home </a>
                    </li>
                    <li class="item home">
                        <a href="{{ path('my_grower_direct_market') }}" title="Go to Home Page">
                            Direct Market </a>
                    </li>
                    <li class="item category131">
                        <strong>Add Product</strong>
                    </li>
                </ul>
            </div>
        </div>
        <main id="maincontent" class="page-main"><a id="contentarea" tabindex="-1"></a>

            <div class="page messages">
                <div data-placeholder="messages">
                </div>
                <div data-bind="scope: 'messages'">
                    <div class="messages" data-bind="foreach: { data: cookieMessages, as: 'message' }">
                    </div>
                    <div class="messages" data-bind="foreach: { data: messages().messages, as: 'message' }">
                    </div>
                </div>
            </div>
            <div class="columns">
                <div class="column main">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Add Flowers to Direct Market</h2>

                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <br>
                                {{ form_start(productForm) }}
                                <fieldset class="fieldset create info">
                                    <legend class="legend"><span>Basic Information</span></legend>
                                    <br>
                                    <div class="field field-name-firstname required">
                                        {{ form_row(productForm.product,{value : roses}) }}
                                    </div>
                                   </fieldset>
                                <fieldset class="fieldset create info">
                                    <legend class="legend"><span>Market Information</span></legend>
                                    <br>

                                    <div class="field field-name-lastname required">
                                        {{ form_row(productForm.numberOfStems) }}
                                    </div>
                                    <div class="field field-name-lastname required">
                                        {{ form_row(productForm.minimumOrder) }}
                                    </div>
                                    <div class="field field-name-lastname required">
                                        {{ form_row(productForm.stemsPerBox) }}
                                    </div>
                                    <div class="field field-name-lastname required">
                                        {{ form_row(productForm.pricePerStem) }}
                                    </div>
                                    <div class="field field-name-lastname required">
                                        {{ form_row(productForm.quality) }}
                                    </div>
                                    <div class="field field-name-lastname required">
                                        {{ form_row(productForm.isOnSale) }}
                                    </div>
                                </fieldset>
                                <fieldset class="fieldset create info">
                                    <legend class="legend"><span>Buyer Information</span></legend>
                                    <br>

                                    <div class="field field-name-lastname required">
                                        {{ form_row(productForm.announceToBuyers) }}
                                    </div>
                                    <div class="field field-name-lastname required">
                                        {{ form_row(productForm.areSamplesAvailable) }}
                                    </div>


                                </fieldset>
                                <div class="actions-toolbar">
                                    <div class="primary"><a class="action login primary"
                                                            href="{{ path('my_grower_direct_market') }}"><span>Back</span></a>
                                    </div>
                                    <div class="secondary">
                                        <button type="submit" class="action login primary" formnovalidate><span>Add Product</span>
                                        </button>
                                    </div>

                                </div>
                                {{ form_end(productForm) }}
                            </div>
                        </div>
                    </div>


                </div>
                {% include(':grower:sidebar.htm.twig') %}

            </div>
        </main>
    {% endblock %}